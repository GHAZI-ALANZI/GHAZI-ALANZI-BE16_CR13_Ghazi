{% extends 'base.html.twig' %}
{% block body %}
<div class="container">

<div class="card mb-3 border-0">
    <h2 class="card-title  mt-3" style="font-family: 'Dancing Script', cursive;
font-family: 'Indie Flower', cursive;
font-family: 'Lobster', cursive;font-size:3em;">{{event.name}}</h2><br>

  <img src="{{event.image}}" class="card-img-top mt-3" alt="..." style="max-width:40vw;">
  <div class="card-body">
    <p class="card-text">Capacity : {{event.capacity}}</p><br>
    <p class="card-text">Address : {{event.address}}</p><br>
    <p class="card-text">Date : {{event.date|date("d-m-y")}}</p><br>
    <p class="card-text">Email : {{event.ContactEmail}}</p><br>
    <p class="card-text">Phone : {{event.ContactPhone}}</p><br>
    <p class="card-text">Type : {{event.Type}}</p><br>
    <p class="card-text">Website : {{event.URL}}</p><br>
       <a class="btn btn-info" href="/">Back</a>

    
  </div>
</div>
</div>
{% endblock %}